/*--------------------------------------------------------------------
*
* $TYPOGRAPHY
*
--------------------------------------------------------------------*/

//- Headings

h1, h2, h3, h4, h5, h6
  margin-top: 0
  margin-bottom: $space
  line-height: $line-height-heading
  font-family: $font-aktiv

h1, h2, h3, h4, h5, h6, strong
  color: black
  
h1, h2, h3, h4, h5, h6
  font-weight: $font-weight-light

h6
  text-transform: uppercase
  color: $gray

//- Text manipulations

abbr
  color: $gray
  border-bottom: 1px dotted $gray-light
  cursor: help

small, sup, sub
  font-size: $font-small

mark
  padding: ceil($ui-padding-narrow/2) $ui-padding-narrow
  background: lighten(yellow, 70%)

blockquote
  margin: $space 0
  padding-left: $ui-padding-extra-spaced
  position: relative
  color: $gray
  font-family: $font-proxima
  font-size: inherit

  &:before, &:after
    content: ''
    position: absolute 
    top: 0
    left: 0
    width: 3px
    height: 100%
    background-color: $pink-light

  p:only-child,
  p:last-child
    margin: 0

  footer
    margin-top: $space*.5
    font-size: $font-base

    &:before
      content: '\2014 \00A0'

.blockquote-centered
  text-align: center
  padding: $ui-padding-extra-spaced*2 0

  &:before, &:after
    left: 40%
    width: 20%
    height: 3px

  &:after
    top: auto
    bottom: 0
  
.blockquote-medium
  font-size: $font-large
  
.blockquote-large
  font-size: $font-h2
  line-height: 1.3

@media screen and (max-width: $breakpoint-desktop - 1)

  h1
    font-size: $mobile-font-h1

  h2
    font-size: $mobile-font-h2

  h3
    font-size: $mobile-font-h3

  h4 
    font-size: $mobile-font-h4

  h5
    font-size: $mobile-font-h5

  h6
    font-size: $mobile-font-h6
    
  .blockquote-large
    font-size: $mobile-font-h2
    
@media screen and (min-width: $breakpoint-desktop)

  h1
    font-size: $font-h1

  h2
    font-size: $font-h2

  h3
    font-size: $font-h3

  h4 
    font-size: $font-h4

  h5
    font-size: $font-h5

  h6
    font-size: $font-h6