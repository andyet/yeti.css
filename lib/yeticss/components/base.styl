/*--------------------------------------------------------------------
*
* $BASE
*
--------------------------------------------------------------------*/

*, *:after, *:before
  box-sizing: border-box

html
  height: 100%

body
  min-height: 100%
  font-family: $font-proxima
  font-size: $font-base
  line-height: $line-height-base 
  color: $gray-dark
  text-rendering: optimizeSpeed

p
  margin-top: 0
  margin-bottom: $space

//- Selection highlight

::-moz-selection
  background-color: $blue-light
  color: white

::selection
  background-color: $blue-light
  color: white

//- Links

a
  color: $blue
  text-decoration: none
  cursor: pointer

  &:hover
    color: darken($blue, 20%)

//- Helper classes

.pull-left
  float: left

.pull-right
  float: right

.hide
  display: none

.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

//- Images and media

img, iframe, video
  max-width: 100%
